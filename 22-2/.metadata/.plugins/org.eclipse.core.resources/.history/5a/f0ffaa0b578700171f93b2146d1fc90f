import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import java.util.*;
import java.io.*;

public class MarkRank 
{
	private static JFrame JF;
	private static Container Ct;
	private static TextField TF1;
	private static TextField TF2;
	private static TextField TF3;
	private static TextField TF4;
	private static Button Bt ;
	private static TextArea TA;
	MarkRank()
	{
		initialize();
	}
	public void initialize()
	{
		//建立对象
		JF = new JFrame("成绩排名");
		Ct = JF.getContentPane();
		TF1 = new TextField(30);
		TF2 = new TextField(10);
		TF3 = new TextField(10);
		TF4 = new TextField(10);
		Bt = new Button("存储");
		TA = new TextArea(20,20);
		
		//设计图形界面
		JF.setBounds(400, 400, 700, 500);
		JF.setLayout(new FlowLayout());
		Ct.add(TF1);
		Ct.add(TF2);
		Ct.add(TF3);
		Ct.add(TF4);
		Ct.add(Bt);
		Ct.add(TA);
		
		//事件处理
		
		//可视化界面
		JF.setVisible(true);
		
	}

	public static void main(String[] args) 
	{
		new MarkRank();
	}

}
